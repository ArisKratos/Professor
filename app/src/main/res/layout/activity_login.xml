<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controle.LoginActivity">

<EditText
android:id="@+id/editEmailProf"
android:layout_width="0dp"
android:layout_height="40dp"
android:layout_marginStart="16dp"
android:layout_marginTop="150dp"
android:layout_marginEnd="16dp"
android:background="@drawable/bg_edittext_rounded"
android:ems="10"
android:hint="E-mail"
android:inputType="textEmailAddress"
android:paddingLeft="8dp"
    app:layout_constraintBottom_toTopOf="@+id/editSenhaAdmin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />





<EditText
android:id="@+id/editSenhaProf"
android:layout_width="0dp"
android:layout_height="40dp"
android:layout_marginTop="8dp"
android:background="@drawable/bg_edittext_rounded"
android:ems="10"
android:hint="Senha"
android:paddingLeft="8dp"
android:inputType="textPassword"
    app:layout_constraintEnd_toEndOf="@+id/editEmailProf"
    app:layout_constraintHorizontal_bias="0.445"
    app:layout_constraintStart_toStartOf="@+id/editEmailProf"
    app:layout_constraintTop_toBottomOf="@+id/editEmailProf" />




<Button
android:id="@+id/buttonCadastrarProf"
android:layout_width="0dp"
android:layout_height="50dp"
android:layout_marginLeft="8dp"
android:layout_marginTop="30dp"
android:background="@drawable/bg_button_rounded"
android:text="@string/Entrar"
android:textColor="@android:color/background_light"
    app:layout_constraintEnd_toEndOf="@+id/editSenhaProf"
    app:layout_constraintStart_toStartOf="@+id/editSenhaProf"
    app:layout_constraintTop_toBottomOf="@+id/editSenhaProf" />

  </androidx.constraintlayout.widget.ConstraintLayout>